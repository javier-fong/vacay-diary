<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>

    <%- include('../partials/nav-menu/app-nav.ejs') %>

    <!-- ==================== MY ITINERARIES SECTION ==================== -->
    <section id="my-itineraries" class="my-itineraries">
        <div class="container">
            <div class="text-center">
                <h3>My Itineraries</h3>
                <p>All your itineraries stored in one place.</p>
            </div>
        </div>
    </section>

    <section class="main-contents">
        <div class="container-two mt-4 pr-5">
            <h6 class="text-right mb-0"><a href="/app/new">Create New +</a></h6>
            <%- include('../partials/messages/error.ejs') %>
        </div>      
        <div class="container-two d-flex justify-content-around flex-wrap text-center">
            <% itinerary.forEach((itinerary, index) => { %>
            <!-- Card -->
            <div class="card mt-4" style="width: 21rem;">

                <!-- Card image -->
                <img class="card-img-top" src="<%= photos[index].urls.regular %>" alt="Card image cap" style="width: 21rem; height: 13rem">
                            
                <!-- Card content -->
                <div class="card-body" style="width: 21rem;">
                    <% Object.keys(countries).forEach(country => { %>
                        <% if (countries[country].name === itinerary.destination) { %>
                            <img src="https://www.countryflags.io/<%= countries[country].id %>/shiny/32.png">
                        <% } %>
                    <% }) %>
                    <!-- Title -->
                    <h5 class="card-title">
                        <a href="/app/my-itineraries/<%= itinerary._id %>" class="showItinerary"><%= itinerary.destination %></a>
                    </h5>
                    <!-- Text -->
                    <p class="card-text"><%= moment(itinerary.dateFrom).format('ddd, MMM Do YYYY') %> -
                        <%= moment(itinerary.dateTo).format('ddd, MMM Do YYYY') %></p>
                    <!-- Button -->
                    <div class="card-icons d-flex justify-content-center align-items-end">
                        <div class="mr-2">
                            <a href="/app/my-itineraries/edit/<%= itinerary._id %>" class="card-link edit">
                                <svg
                                class="bi bi-pencil-square" width="1.5em" height="1.5em" viewBox="0 0 16 16"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd"
                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </a>
                        </div>    
                        <div class="ml-2">
                            <form action="/app/my-itineraries/<%= itinerary._id %>?_method=DELETE" method="POST"
                                id="<%= itinerary._id %>">
                                <button type="submit" class="deleteBtn" id="<%= itinerary._id %>">
                                    <svg
                                        class="bi bi-trash" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd"
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </button>                                   
                                </a>
                            </form>
                        </div>                        
                    </div>
                </div>
            </div>
            <!-- Card -->
            <% }) %>
        </div>
    </section>

</body>

</html>