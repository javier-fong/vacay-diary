<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>

    <%- include('../partials/nav-menu/app-nav.ejs') %>

    <!-- ==================== New Form Section ==================== -->
    <section id="new-form" class="new-form">
        <div class="container">
            <h2>Edit Itinerary</h2>
            <form action="/app/my-itineraries/edit/<%= itinerary._id %>/?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="destination">Destination:</label>
                        <%- include('./countries-dropdown.ejs') %>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="dateFrom">Date From:</label>
                        <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="<%= moment(itinerary.dateFrom).format('YYYY-MM-DD') %>">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="dateTo">Date To:</label>
                        <input type="date" class="form-control" id="dateTo" name="dateTo" value="<%= moment(itinerary.dateTo).format('YYYY-MM-DD') %>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="5"><%= itinerary.description %></textarea>       
                </div>
                <div class="form-group">
                    <label for="plans">Plans:</label>
                    <textarea class="form-control" id="plans" name="plans" rows="12"><%= itinerary.plans %></textarea>
                </div>
                <button type="submit" class="btn btn-info mt-2">Submit</button>
            </form>
        </div>
    </section><!-- End New Form Section -->

</body>

</html>